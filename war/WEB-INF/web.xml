<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>serviceBroker</servlet-name>
    <servlet-class>myApp.service.ServiceBrokerImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>serviceBroker</servlet-name>
    <url-pattern>preschool/serviceBroker</url-pattern>
  </servlet-mapping>

<servlet>
    <servlet-name>FileUpload</servlet-name>
    <servlet-class>myApp.service.file.FileUpload</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FileUpload</servlet-name>
    <url-pattern>/FileUpload</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FileDownload</servlet-name>
    <servlet-class>myApp.service.file.FileDownload</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FileDownload</servlet-name>
    <url-pattern>/FileDownload</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PdfDownload</servlet-name>
    <servlet-class>myApp.service.pdf.PdfDownload</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PdfDownload</servlet-name>
    <url-pattern>/PdfDownload</url-pattern>
  </servlet-mapping>

    
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
