			<!-- oracle -->   
			<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
			<property name="url" value="jdbc:oracle:thin:@218.236.10.173:1521:XE" />
			<property name="username" value="psmis" />
			<property name="password" value="psmis" />
			
		</dataSource>
	</environment>
</environments>

